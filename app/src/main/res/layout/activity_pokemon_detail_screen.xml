<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="pokemon"
            type="com.samaritan.assignment.model.pokemon.PokemonListItem" />
        <variable
            name="observerModel"
            type="com.samaritan.assignment.model.observers.PokemonDetailsObserverModel" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/background"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="@dimen/_10sdp"
            android:id="@+id/layoutImage"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:pokemonImage="@{pokemon.pokemonDetail.sprites.other.officialArtwork.frontDefault}"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textStyle="bold"
                android:text="@{observerModel.name}"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="@dimen/_20ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutImage"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginVertical="@dimen/_10sdp"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:id="@+id/cardAbout"
                    app:cardElevation="7dp"
                    app:layout_constraintTop_toTopOf="parent"
                    >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp">


                        <TextView
                            android:id="@+id/tvAbout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/about"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20ssp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />



                        <TextView
                            android:id="@+id/tvTypesTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/type_s"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvAbout"
                            android:textColor="@color/black_ligt" />

                        <TextView
                            android:id="@+id/tvTypes"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@{observerModel.types}"
                            android:layout_marginStart="@dimen/_2sdp"
                            app:layout_constraintTop_toTopOf="@+id/tvTypesTitle"
                            app:layout_constraintBottom_toBottomOf="@+id/tvTypesTitle"
                            app:layout_constraintStart_toEndOf="@+id/tvTypesTitle"
                            android:textColor="@color/black_ligt" />

                        <TextView
                            android:id="@+id/tvWeightTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/weight"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvTypesTitle"
                            android:textColor="@color/black_ligt" />

                        <TextView
                            android:id="@+id/tvWeight"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@{observerModel.weight}"
                            android:layout_marginStart="@dimen/_2sdp"
                            app:layout_constraintTop_toTopOf="@+id/tvWeightTitle"
                            app:layout_constraintBottom_toBottomOf="@+id/tvWeightTitle"
                            app:layout_constraintStart_toEndOf="@+id/tvWeightTitle"
                            android:textColor="@color/black_ligt" />

                        <TextView
                            android:id="@+id/tvHeightTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/height"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvWeightTitle"
                            android:textColor="@color/black_ligt" />

                        <TextView
                            android:id="@+id/tvHeight"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@{observerModel.height}"
                            android:layout_marginStart="@dimen/_2sdp"
                            app:layout_constraintTop_toTopOf="@+id/tvHeightTitle"
                            app:layout_constraintBottom_toBottomOf="@+id/tvHeightTitle"
                            app:layout_constraintStart_toEndOf="@+id/tvHeightTitle"
                            android:textColor="@color/black_ligt" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:id="@+id/cardBaseStats"
                    app:cardElevation="7dp"
                    app:layout_constraintTop_toBottomOf="@+id/cardAbout">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/tvBaseStats"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/base_stats"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20ssp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                        <TextView
                            android:id="@+id/tvHPTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/hp"
                            android:textColor="@color/black_ligt"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvBaseStats" />

                        <TextView
                            android:id="@+id/tvHP"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:text="@{observerModel.hp}"
                            android:textColor="@color/black_ligt"
                            app:layout_constraintBottom_toBottomOf="@+id/tvHPTitle"
                            app:layout_constraintStart_toEndOf="@+id/tvHPTitle"
                            app:layout_constraintTop_toTopOf="@+id/tvHPTitle" />

                        <TextView
                            android:id="@+id/tvAttackTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/attack"
                            android:textColor="@color/black_ligt"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvHPTitle" />

                        <TextView
                            android:id="@+id/tvAttack"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:text="@{observerModel.attack}"
                            android:textColor="@color/black_ligt"
                            app:layout_constraintBottom_toBottomOf="@+id/tvAttackTitle"
                            app:layout_constraintStart_toEndOf="@+id/tvAttackTitle"
                            app:layout_constraintTop_toTopOf="@+id/tvAttackTitle" />

                        <TextView
                            android:id="@+id/tvDefenceTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/defence"
                            android:textColor="@color/black_ligt"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvAttackTitle" />

                        <TextView
                            android:id="@+id/tvDefence"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:text="@{observerModel.deffence}"
                            android:textColor="@color/black_ligt"
                            app:layout_constraintBottom_toBottomOf="@+id/tvDefenceTitle"
                            app:layout_constraintStart_toEndOf="@+id/tvDefenceTitle"
                            app:layout_constraintTop_toTopOf="@+id/tvDefenceTitle" />

                        <TextView
                            android:id="@+id/tvSpecialAttackTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/special_attack"
                            android:textColor="@color/black_ligt"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvDefenceTitle" />

                        <TextView
                            android:id="@+id/tvSpecialAttack"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:text="@{observerModel.specialAttak}"
                            android:textColor="@color/black_ligt"
                            app:layout_constraintBottom_toBottomOf="@+id/tvSpecialAttackTitle"
                            app:layout_constraintStart_toEndOf="@+id/tvSpecialAttackTitle"
                            app:layout_constraintTop_toTopOf="@+id/tvSpecialAttackTitle" />

                        <TextView
                            android:id="@+id/tvSpecialDefenceTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/special_defence"
                            android:textColor="@color/black_ligt"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvSpecialAttackTitle" />

                        <TextView
                            android:id="@+id/tvSpecialDefence"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:text="@{observerModel.specialDeffence}"
                            android:textColor="@color/black_ligt"
                            app:layout_constraintBottom_toBottomOf="@+id/tvSpecialDefenceTitle"
                            app:layout_constraintStart_toEndOf="@+id/tvSpecialDefenceTitle"
                            app:layout_constraintTop_toTopOf="@+id/tvSpecialDefenceTitle" />

                        <TextView
                            android:id="@+id/tvSpeedTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/speed"
                            android:textColor="@color/black_ligt"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvSpecialDefenceTitle" />

                        <TextView
                            android:id="@+id/tvSpeed"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:text="@{observerModel.speed}"
                            android:textColor="@color/black_ligt"
                            app:layout_constraintBottom_toBottomOf="@+id/tvSpeedTitle"
                            app:layout_constraintStart_toEndOf="@+id/tvSpeedTitle"
                            app:layout_constraintTop_toTopOf="@+id/tvSpeedTitle" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:visibility="visible"
                    android:layout_marginTop="20dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:id="@+id/cardCaptured"
                    app:cardElevation="7dp"
                    app:layout_constraintTop_toBottomOf="@+id/cardBaseStats">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp">


                        <TextView
                            android:id="@+id/tvCapturedInformation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/base_stats"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20ssp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />



                        <TextView
                            android:id="@+id/tvNickNameTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/nickname_collon"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvCapturedInformation"
                            android:textColor="@color/black_ligt" />

                        <TextView
                            android:id="@+id/tvNickname"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@{pokemon.pokemonCapturedModel.nickName}"
                            android:layout_marginStart="@dimen/_2sdp"
                            app:layout_constraintTop_toTopOf="@+id/tvNickNameTitle"
                            app:layout_constraintBottom_toBottomOf="@+id/tvNickNameTitle"
                            app:layout_constraintStart_toEndOf="@+id/tvNickNameTitle"
                            android:textColor="@color/black_ligt" />

                        <TextView
                            android:id="@+id/tvCapturedOnTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/attack"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvNickNameTitle"
                            android:textColor="@color/black_ligt" />

                        <TextView
                            android:id="@+id/tvCapturedOn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@{pokemon.pokemonCapturedModel.capturedDate}"
                            android:layout_marginStart="@dimen/_2sdp"
                            app:layout_constraintTop_toTopOf="@+id/tvCapturedOnTitle"
                            app:layout_constraintBottom_toBottomOf="@+id/tvCapturedOnTitle"
                            app:layout_constraintStart_toEndOf="@+id/tvCapturedOnTitle"
                            android:textColor="@color/black_ligt" />

                        <TextView
                            android:id="@+id/tvCapturedLevelTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/defence"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tvCapturedOnTitle"
                            android:textColor="@color/black_ligt" />

                        <TextView
                            android:id="@+id/tvCapturedLevel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@{pokemon.pokemonCapturedModel.capturedLevel}"
                            android:layout_marginStart="@dimen/_2sdp"
                            app:layout_constraintTop_toTopOf="@+id/tvCapturedLevelTitle"
                            app:layout_constraintBottom_toBottomOf="@+id/tvCapturedLevelTitle"
                            app:layout_constraintStart_toEndOf="@+id/tvCapturedLevelTitle"
                            android:textColor="@color/black_ligt" />



                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnCapture"
                    android:background="@drawable/background_button"
                    app:layout_constraintTop_toBottomOf="@+id/cardCaptured"
                    android:text="@string/capture"
                    android:textColor="@color/white"
                    android:layout_margin="@dimen/_20sdp"
                    android:textAllCaps="false"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>